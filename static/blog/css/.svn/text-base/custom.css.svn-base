

/* Wrapper for page content to push down footer */
#wrap {
	min-height: 100%;
	height: auto !important;
	height: 100%;
	/* Negative indent footer by it's height */
	margin: 0 auto -60px;
}
.container-narrow {
	margin: 0 auto;
	max-width: 700px;
}
.container-narrow > hr {
	margin: 30px 0;
}

/* Set the fixed height of the footer here */
#push,
#footer {
	height: 60px;
}
#footer {
	background-color: #f5f5f5;
}


.group-tags .tag-box {
	list-style:none;
	margin:0;
	padding:5px 0;
	overflow:hidden
}
.group-tags .tag-box li {
	line-height:28px;
	float:left
}
.group-tags .tag-box a {
	padding:3px 6px;
	margin:2px;
	text-decoration:none
}
.group-tags .tag-box a span {
	vertical-align:super;
	font-size:.8em
}
